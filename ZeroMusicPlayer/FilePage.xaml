<Page x:Class="ZeroMusicPlayer.FilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZeroMusicPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="750"
      Title="FilePage">

    <Page.Resources>
        <ResourceDictionary Source="ScrollBarDictionary.xaml"/>
    </Page.Resources>

    <Grid >
        <Grid Height="30" VerticalAlignment="Top" Background="White">
            <Button Content="&lt;" Height="30" HorizontalAlignment="Left" Width="30" BorderThickness="0" Background="White"/>
            <StackPanel x:Name="AddressPanel" Width="650" Orientation="Horizontal" HorizontalAlignment="Left" Margin="30,0,0,0" Background="#FFF3F3F3">
                <Label Width="10"/>
            </StackPanel>
        </Grid>
        
        <ScrollViewer Width="750" Height="520" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0">
            <StackPanel x:Name="SongsPanel" Width="750"/>
        </ScrollViewer>
    </Grid>
</Page>
