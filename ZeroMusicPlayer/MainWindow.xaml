<Window x:Class="ZeroMusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeroMusicPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" ResizeMode="CanMinimize" WindowStyle="None">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0288D1"/>
            <Setter Property="BorderBrush" Value="#FF29B6F6"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Width="200" Background="#FF0288D1" HorizontalAlignment="Left" Margin="0,52,0,0">
            <Button>Favorites</Button>
            <Button>Playlists</Button>
        </StackPanel>

        <ScrollViewer Width="800" Height="548" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,52,0,0" VerticalScrollBarVisibility="Hidden">
            <StackPanel Width="800">
                <local:SongItemControl SongName="梦灯笼" Author="RADWIMPS" Time="2:11"/>
                <local:SongItemControl SongName="三叶の通学" Author="RADWIMPS" Time="1:08"/>
                <local:SongItemControl SongName="糸守高校" Author="RADWIMPS" Time="2:33"/>
                <local:SongItemControl SongName="はじめての、东京" Author="RADWIMPS" Time="2:11"/>
                <local:SongItemControl SongName="憧れカフェ" Author="RADWIMPS" Time="2:11"/>
                <local:SongItemControl SongName="奥寺先辈のテーマ" Author="RADWIMPS" Time="2:11"/>
                <local:SongItemControl SongName="ふたりの异変" Author="RADWIMPS" Time="2:11"/>
                <local:SongItemControl SongName="前前前世 (movie ver.)" Author="RADWIMPS" Time="2:11"/>
                <Label Height="50" />
            </StackPanel>
        </ScrollViewer>


        <Grid HorizontalAlignment="Center" Height="60" VerticalAlignment="Bottom" Width="800" Background="#E581D4FA" Margin="200,0,0,0">
            <ProgressBar HorizontalAlignment="Left" Height="8" Margin="146,27,0,27" VerticalAlignment="Center" Width="482" Background="#FF64B5F6" Value="37" Foreground="White" BorderThickness="0"/>
            <Button HorizontalAlignment="Left" Height="18" Margin="64,0,0,0" VerticalAlignment="Center" Width="15" BorderBrush="{x:Null}" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/play.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Left" Height="15" Margin="685,0,0,0" VerticalAlignment="Center" Width="18" BorderBrush="{x:Null}" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/volume.png"/>
                </Button.Background>
            </Button>
            <Label Content="1:49" HorizontalAlignment="Left" Margin="633,0,0,0" VerticalAlignment="Center" FontFamily="Arial" FontWeight="Bold" Foreground="White" FontSize="10"/>

        </Grid>

        <Grid x:Name="TitleBar" HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="1000" MouseDown="TitleBar_MouseDown">
            <Grid.Background>
                <ImageBrush ImageSource="Resources/shadow_top.png"/>
            </Grid.Background>
            <!--<Label Content="Zero Music Player" HorizontalAlignment="Left" Margin="10,0,0,5" VerticalAlignment="Center" FontFamily="Arial" Foreground="#FF4B4B4B"/>-->
            <Label Content="君の名は" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="16" Margin="0,0,0,5" FontWeight="Bold" Foreground="#FF4B4B4B"/>

        </Grid>


    </Grid>
</Window>
